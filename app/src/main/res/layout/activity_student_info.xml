<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlKolegij"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIme"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >
        <EditText
            android:id="@+id/etKolegij"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="@string/subject"
            android:textSize="12dp"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlProfesor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlKolegij"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">

        <EditText
            android:id="@+id/etProfesor"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="@string/professor"
            android:textSize="12dp"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlGodina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlProfesor"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/etGodina"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="@string/year"
            android:textSize="12dp"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnDalje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlPredavanja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tlVjezbe"
        app:layout_constraintTop_toBottomOf="@+id/tlGodina"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >

        <EditText
            android:id="@+id/etPredavanja"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="@string/classes"
            android:textSize="12dp"
            android:inputType="textPersonName"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlVjezbe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tlPredavanja"
        app:layout_constraintTop_toBottomOf="@+id/tlGodina"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        >
        <EditText
            android:id="@+id/etVjezbe"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="@string/practice"
            android:textSize="12dp"
            android:inputType="textPersonName"
            />


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tvIme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tlKolegij"
        app:layout_constraintRight_toLeftOf="@+id/tvPrezime"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvPrezime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/lastname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvIme"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tlKolegij"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>
